@model IEnumerable<Golf_Roster_Creator.Course>

@{
    ViewBag.Title = "Course Management";
}

<div class="row">
    <div class="span12">
        <h2>@ViewBag.Title</h2>

        <p>
            @Html.ActionLink("Add New Course", "Create", null, new { @class = "btn btn-info" })
        </p>
        <table class="table table-condensed table-hover table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.CourseID }, new { @class = "btn btn-success btn-small" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.CourseID }, new { @class = "btn btn-small" })
                        </td>
                    </tr>
                </tbody>
            }

        </table>
    </div>
</div>

